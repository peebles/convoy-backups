# /etc/crontab: system-wide crontab

# create snapshots of all volumes once per hour
# create backups of the most recent snapshots once per day

SHELL=/bin/sh
PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin

# /etc/profile.d/backups.sh was created in run.sh with all of
# the docker env vars, so the config.json works properly.

# m h dom mon dow user	command
0 *	* * *	root    eval $(cat /etc/profile.d/backups.sh); cd /deploy && node create.js --snapshot --nomail
0 0	* * *	root	eval $(cat /etc/profile.d/backups.sh); cd /deploy && node create.js --backup
